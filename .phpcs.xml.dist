<?xml version="1.0"?>
<ruleset name="WordPress">
    <description>WordPress Coding Standards</description>

    <config name="installed_paths" value="vendor/wp-coding-standards/wpcs,vendor/phpcsstandards/phpcsutils,vendor/phpcsstandards/phpcsextra"/>

    <rule ref="WordPress">
        <exclude name="WordPress.Files.FileName" />
    </rule>
    <rule ref="Generic.Files.LineEndings">
        <properties>
            <property name="eolChar" value="\n"/>
        </properties>
    </rule>
    <file>./theme-name/</file>
    <exclude-pattern>./theme-name/vendor/*</exclude-pattern>
</ruleset>
